<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_info_block_bg"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/joinshop_item_picture"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/joinshop_example" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/joinshop_shop_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="明泽加盟商"
                android:textColor="@color/main_text_color"
                android:textSize="14sp" />
            <!-- 星级评分条 -->
            <RatingBar
                android:id="@+id/joinshop_item_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:isIndicator="true"
                android:max="100"
                android:maxHeight="16dp"
                android:minHeight="16dp"
                android:numStars="5"
                android:progressDrawable="@drawable/my_ratingbar_star"
                android:rating="4"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/joinshop_shop_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="武汉市洪山区珞瑜南路127号"
                android:textColor="@color/gray_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/joinshop_shop_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="4000-2007-1100"
                android:textColor="@color/gray_black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
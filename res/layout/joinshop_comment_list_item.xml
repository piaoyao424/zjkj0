<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >

        <RatingBar
            android:id="@+id/joinshop_comment_item_ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:isIndicator="true"
            android:max="100"
            android:maxHeight="16dp"
            android:minHeight="16dp"
            android:numStars="5"
            android:progressDrawable="@drawable/my_ratingbar_star"
            android:rating="4"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/joinshop_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/joinshop_comment_item_ratingbar"
            android:background="@null"
            android:singleLine="true"
            android:text="刘德华"
            android:textColor="@color/main_text_color"
            android:textSize="14sp" />
 	</RelativeLayout>
 	<!-- android:layout_alignParentRight="true" -->
        <TextView
            android:id="@+id/joinshop_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginRight="2dp"
            android:background="@null"
            android:singleLine="true"
            android:text="1小时前"
            android:textColor="@color/main_text_color"
            android:textSize="14sp" />
   

    <TextView
        android:id="@+id/joinshop_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="    搞活动卡金凤花开就方法分工发骨灰盒发而发奋阿飞而非音乐摇滚方法嚷嚷的方法爱吃大风车见附件减肥法"
        android:textColor="@color/gray_black"
        android:textSize="14sp" />

    <ImageView style="@style/mygoal_horizontal_separator" />

</LinearLayout>
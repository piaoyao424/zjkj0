<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deep_gray"
    android:orientation="vertical"
    android:padding="1dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/driverdesignated_num"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="#F1F3F6"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#F1F3F6"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="发布时间："
            android:textColor="@color/popwindow_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/driverdesignated_publish_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1F3F6"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/driverdesignated_callicon"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="#F1F3F6"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/phone_call_yellow_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical|right"
                android:text="需要时间："
                android:textColor="@color/popwindow_title"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical|right"
                android:text="出发地："
                android:textColor="@color/popwindow_title"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical|right"
                android:text="目的地："
                android:textColor="@color/popwindow_title"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/driverdesignated_need_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/driverdesignated_start"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/driverdesignated_dest"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/popListMenu_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@null"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/popListMenu_Title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/popwindow_title"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/popListMenu_List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/popwindow_divider"
            android:dividerHeight="1dp"
            android:fadingEdge="@color/transparent"
            android:scrollbars="none" />
    </LinearLayout>

</RelativeLayout>
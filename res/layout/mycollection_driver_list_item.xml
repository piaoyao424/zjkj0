<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/mycollection_driver_picture"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/head_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/mycollection_driver_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="许晴"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/mycolleticon_service_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="服务中"
                android:textColor="@color/yellow"
                android:textSize="18dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/mycollection_driver_license"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="出租车司机(鄂A E2344)"
            android:textColor="@color/gray_black"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mycollection_driver_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖北武汉人"
                android:textColor="@color/gray_black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/mycollection_driver_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="驾驶里程(3万里)"
                android:textColor="@color/gray_black"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mycollection_linear_call"
            android:layout_width="65dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_normal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/phone_call_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="呼叫"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>